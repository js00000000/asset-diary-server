{
  "info": {
    "name": "Asset Diary API",
    "description": "API for Asset Diary asset/portfolio tracking app.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Assets",
      "item": [
        {
          "name": "List Holdings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/holdings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "holdings"]
            },
            "description": "List all holdings across all accounts for the authenticated user"
          }
        },
        {
          "name": "Get Daily Total Assets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/daily-total-assets?start_date=2025-01-01&end_date=2025-12-31",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "daily-total-assets"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2025-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2025-12-31"
                }
              ]
            },
            "description": "Retrieves the daily total asset values for the authenticated user within the specified date range"
          }
        }
      ]
    },
    {
      "name": "Exchange Rates",
      "item": [
        {
          "name": "Get Exchange Rates by Base Currency",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/exchange-rates/TWD",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "exchange-rates", "TWD"]
            },
            "description": "Get all exchange rates for a specific base currency"
          }
        }
      ]
    },
    {
      "name": "Market Data",
      "item": [
        {
          "name": "Get Stock Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/stock/price/2330",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "stock", "price", "2330"]
            },
            "description": "Get current price for a stock or Taiwan stock code"
          }
        },
        {
          "name": "Get Cryptocurrency Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/crypto/price/BTC",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "crypto", "price", "BTC"]
            },
            "description": "Get current price for a cryptocurrency in USDT"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"yourpassword\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/sign-in",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "sign-in"]
            },
            "description": "Authenticate user and get access token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/auth/logout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "logout"]
            },
            "description": "Logs out the user and clears the refresh token cookie"
          }
        }
      ]
    },
    {
      "name": "Accounts",
      "item": [
        {
          "name": "List All Accounts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/accounts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "accounts"]
            },
            "description": "List all accounts for the authenticated user"
          }
        }
      ]
    },
    {
      "name": "Market Data",
      "item": [
        {
          "name": "Get Stock Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/stock/price/2330",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "stock", "price", "2330"]
            },
            "description": "Get current price for a stock or Taiwan stock code"
          }
        },
        {
          "name": "Get Cryptocurrency Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/crypto/price/BTC",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "crypto", "price", "BTC"]
            },
            "description": "Get current price for a cryptocurrency in USDT"
          }
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          ""
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          ""
        ],
        "type": "text/javascript"
      }
    }
  ]
}
