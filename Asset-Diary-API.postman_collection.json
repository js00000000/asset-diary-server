{
  "info": {
    "name": "Asset Diary API",
    "description": "API for Asset Diary asset/portfolio tracking app.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Assets",
      "item": [
        {
          "name": "List Holdings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/holdings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "holdings"]
            },
            "description": "List all holdings across all accounts for the authenticated user"
          }
        },
        {
          "name": "Get Daily Total Assets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/daily-total-assets?start_date=2025-01-01&end_date=2025-12-31",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "daily-total-assets"],
              "query": [
                {
                  "key": "start_date",
                  "value": "2025-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2025-12-31"
                }
              ]
            },
            "description": "Retrieves the daily total asset values for the authenticated user within the specified date range"
          }
        }
      ]
    },
    {
      "name": "Exchange Rates",
      "item": [
        {
          "name": "Get Exchange Rates by Base Currency",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/exchange-rates/TWD",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "exchange-rates", "TWD"]
            },
            "description": "Get all exchange rates for a specific base currency"
          }
        }
      ]
    },
    {
      "name": "Market Data",
      "item": [
        {
          "name": "Get Stock Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/stock/price/2330",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "stock", "price", "2330"]
            },
            "description": "Get current price for a stock or Taiwan stock code"
          }
        },
        {
          "name": "Get Cryptocurrency Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/crypto/price/BTC",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "crypto", "price", "BTC"]
            },
            "description": "Get current price for a cryptocurrency in USDT"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"yourpassword\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/sign-in",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "sign-in"]
            },
            "description": "Authenticate user and get access token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/auth/logout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "logout"]
            },
            "description": "Logs out the user and clears the refresh token cookie"
          }
        },
        {
          "name": "Link Google Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"your_google_id_token_here\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/google/link",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "google", "link"]
            },
            "description": "Link a Google account to the authenticated user"
          }
        },
        {
          "name": "Unlink Google Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/auth/google/unlink",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "google", "unlink"]
            },
            "description": "Unlink the Google account from the authenticated user"
          }
        },
        {
          "name": "Get Google Account Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/auth/google/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "google", "status"]
            },
            "description": "Get the Google account link status for the authenticated user"
          }
        }
      ]
    },
    {
      "name": "Accounts",
      "item": [
        {
          "name": "List All Accounts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/accounts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "accounts"]
            },
            "description": "List all accounts for the authenticated user"
          }
        }
      ]
    },
    {
      "name": "Market Data",
      "item": [
        {
          "name": "Get Stock Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/stock/price/2330",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "stock", "price", "2330"]
            },
            "description": "Get current price for a stock or Taiwan stock code"
          }
        },
        {
          "name": "Get Cryptocurrency Price",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/crypto/price/BTC",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "crypto", "price", "BTC"]
            },
            "description": "Get current price for a cryptocurrency in USDT"
          }
        }
      ]
    },
    {
      "name": "Cron Jobs",
      "item": [
        {
          "name": "Update Exchange Rates",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/cron/update-exchange-rates",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "cron", "update-exchange-rates"]
            },
            "description": "Triggers an update of all exchange rates from the external API. Requires API key authentication."
          }
        },
        {
          "name": "Record Daily Assets Value",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/cron/record-daily-assets-value",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "cron", "record-daily-assets-value"]
            },
            "description": "Records the current total asset values for all users. Requires API key authentication."
          }
        }
      ]
    },
    {
      "name": "Redis",
      "item": [
        {
          "name": "Get Key",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/redis/get/:key",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "redis", "get", ":key"],
              "variable": [
                {
                  "key": "key",
                  "value": "your_key_here"
                }
              ]
            },
            "description": "Get a value by key from Redis"
          }
        },
        {
          "name": "List Keys",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/redis/keys?pattern=*",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "redis", "keys"],
              "query": [
                {
                  "key": "pattern",
                  "value": "*"
                }
              ]
            },
            "description": "List all keys matching a pattern (default: '*')"
          }
        },
        {
          "name": "Flush Database",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/redis/flush",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "redis", "flush"]
            },
            "description": "Delete all keys in the current Redis database"
          }
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "apiKey",
      "value": "your_api_key_here",
      "description": "API key for accessing endpoints"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          ""
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          ""
        ],
        "type": "text/javascript"
      }
    }
  ]
}
